<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="schedule">
	<select id="findBySchedule" resultType="schedulevo">
		<![CDATA[
			SELECT s."no", reason, "desc", user_no, calendar_no FROM "user" u, "schedule" s, "calendar" c WHERE u."no" = s.user_no and s.calendar_no = c."no";
		]]>
	</select>
		<insert id="addSchedule" parameterType="schedulevo">
		<![CDATA[
			INSERT INTO "schedule" VALUES (DEFAULT, #{reason}, #{desc}, #{userNo}, #{calendarNo})
		]]>
	</insert>
	<update id="updateSchedule" parameterType="schedulevo">
		<![CDATA[
			 UPDATE "schedule" SET reason = #{reason}, "desc" = #{desc} WHERE user_no = #{userNo}
		]]>
	</update>
	<delete id="deleteSchedule" parameterType="schedulevo">
		<![CDATA[
			DELETE FROM "schedule" WHERE user_no = #{userNo}
		]]>
	</delete>
</mapper>